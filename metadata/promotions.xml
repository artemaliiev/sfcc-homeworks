<?xml version="1.0" encoding="UTF-8"?>
<promotions xmlns="http://www.demandware.com/xml/impex/promotion/2008-01-31">
    <campaign campaign-id="BestBirthdayEver">
        <description>BestBirthdayEver</description>
        <enabled-flag>true</enabled-flag>
        <campaign-scope>
            <applicable-online/>
        </campaign-scope>
        <customer-groups match-mode="any">
            <customer-group group-id="CustomerBirthday"/>
        </customer-groups>
        <coupons>
            <coupon coupon-id="BestBirthdayEver"/>
        </coupons>
    </campaign>

    <promotion promotion-id="birthday50%off">
        <enabled-flag>true</enabled-flag>
        <archived-flag>false</archived-flag>
        <searchable-flag>false</searchable-flag>
        <refinable-flag>false</refinable-flag>
        <prevent-requalifying-flag>false</prevent-requalifying-flag>
        <prorate-across-eligible-items-flag>false</prorate-across-eligible-items-flag>
        <exclusivity>no</exclusivity>
        <name xml:lang="x-default">birthday 50% off</name>
        <order-promotion-rule>
            <discount-only-qualifying-products>false</discount-only-qualifying-products>
            <discounts condition-type="product-quantity">
                <discount>
                    <threshold>1</threshold>
                    <percentage>50.0</percentage>
                </discount>
            </discounts>
            <exclude-discounted-products>false</exclude-discounted-products>
        </order-promotion-rule>
    </promotion>

    <promotion promotion-id="birthdayFreeShipping">
        <enabled-flag>true</enabled-flag>
        <archived-flag>false</archived-flag>
        <searchable-flag>false</searchable-flag>
        <refinable-flag>false</refinable-flag>
        <prevent-requalifying-flag>false</prevent-requalifying-flag>
        <prorate-across-eligible-items-flag>false</prorate-across-eligible-items-flag>
        <exclusivity>no</exclusivity>
        <name xml:lang="x-default">Free Shipping At Birthday</name>
        <shipping-promotion-rule>
            <shipping-methods>
                <method-id>EUR005</method-id>
                <method-id>EUR004</method-id>
                <method-id>EUR003</method-id>
                <method-id>EUR002</method-id>
                <method-id>EUR001</method-id>
                <method-id>021</method-id>
                <method-id>012</method-id>
                <method-id>005</method-id>
                <method-id>004</method-id>
                <method-id>003</method-id>
                <method-id>002</method-id>
                <method-id>001</method-id>
            </shipping-methods>
            <discounts condition-type="shipment-total">
                <discount>
                    <threshold>0.0</threshold>
                    <free/>
                </discount>
            </discounts>
        </shipping-promotion-rule>
    </promotion>

    <promotion-campaign-assignment promotion-id="birthday50%off" campaign-id="BestBirthdayEver">
        <qualifiers match-mode="all">
            <customer-groups/>
            <source-codes/>
            <coupons/>
        </qualifiers>
    </promotion-campaign-assignment>

    <promotion-campaign-assignment promotion-id="birthdayFreeShipping" campaign-id="BestBirthdayEver">
        <qualifiers match-mode="all">
            <customer-groups/>
            <source-codes/>
            <coupons/>
        </qualifiers>
    </promotion-campaign-assignment>

</promotions>
